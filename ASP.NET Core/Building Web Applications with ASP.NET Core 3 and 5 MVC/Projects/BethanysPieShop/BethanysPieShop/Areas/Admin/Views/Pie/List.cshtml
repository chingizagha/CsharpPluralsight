@using BethanysPieShop.ViewModels
@model AdminPiesListViewModel

  <h2>Pies</h2>
             
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Pie Id</th>
        <th>Name</th>
        <th>Short Description</th>
        <th>Long Description</th>
        <th>Price</th>
        <th>Image Url</th>
        <th>Image Thumbnail Url</th>
        <th>Is Pie Of TheWeek</th>
        <th>In Stock</th>
        <th>Category Id</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <tr>
          @foreach (var pie in Model.Pies)
          {
            <td>@pie.PieId</td>
            <td>@pie.Name</td>
            <td>@pie.ShortDescription</td>
            <td>@pie.LongDescription</td>
            <td>@pie.ImageUrl</td>
            <td>@pie.ImageThumbnailUrl</td>
            <td>@pie.IsPieOfTheWeek</td>
            <td>@pie.InStock</td>
            <td>@pie.CategoryId</td>
            <td>@pie.Category</td>
          }
      </tr>
    </tbody>
  </table>


